{
  "info": {
    "name": "Surooh Wallet ↔ Central Core",
    "_postman_id": "2d7ab0cc-aaaa-bbbb-cccc-abcdefabcdef",
    "description": "Postman collection to test the bidirectional link between Wallet Core and Central Memory Core.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "WALLET_BASE_URL",
      "value": "https://wallet.sorooh.ai"
    },
    {
      "key": "CENTRAL_BASE_URL",
      "value": "https://central.sorooh.ai"
    },
    {
      "key": "JWT_BEARER",
      "value": "REPLACE_WITH_JWT"
