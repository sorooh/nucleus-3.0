    {
      "key": "X_SUROOH_SIGNATURE",
      "value": "REPLACE_WITH_HMAC"
    }
  ],
  "item": [
    {
      "name": "Wallet → Central: export transactions",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_BEARER}}"
          },
          {
            "key": "X-Surooh-Signature",
            "value": "{{X_SUROOH_SIGNATURE}}"
          }
        ],
        "url": "{{CENTRAL_BASE_URL}}/central/memory/wallet/export",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"source\": \"WALLET_CORE\",\n  \"direction\": \"OUTBOUND\",\n  \"timestamp\": \"2025-10-11T00:00:00Z\",\n  \"dataType\": \"TRANSACTION_BATCH\",\n  \"payload\": {\n    \"transactions\": [{\n      \"id\": \"TX-98271\",\n      \"userId\": \"USR-554\",\n      \"amount\": 35.5,\n      \"currency\": \"EUR\",\n      \"type\": \"PURCHASE\",\n      \"tier\": \"Silver\",\n      \"pointsEarned\": 355\n    }]\n  }\n}"
        }
      },
      "response": []
    },
    {
      "name": "Central → Wallet: sync insights",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Surooh-Signature",
            "value": "{{X_SUROOH_SIGNATURE}}"
          }
